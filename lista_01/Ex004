const leia = require('readline-sync')

let n1;
let n2;
let n3;
let n4;
let diferenca;

n1 = leia.questionFloat('\nDigite o primeiro valor: ', {limitMessage: 'Digite um número do tipo Float'});
n2 = leia.questionFloat('\nDigite a segundo valor: ', {limitMessage: 'Digite um número do tipo Float'});
n3 = leia.questionFloat('\nDigite a terceiro valor: ', {limitMessage: 'Digite um número do tipo Float'});
n4 = leia.questionFloat('\nDigite a quarto valor: ', {limitMessage: 'Digite um número do tipo Float'});

diferenca = (n1 * n2) - (n3 * n4);
console.clear();
console.log('O valor da diferença é ' + diferenca);